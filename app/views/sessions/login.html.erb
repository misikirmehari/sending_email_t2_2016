<div class='jumbotron'>
  <div class='row'>
    <div class='col-xs-6'>
      <%= image_tag('octocat.png', class: 'img-responsive  center-block') %>
      <%= link_to button_tag('Sign in via Github', class: 'btn-auth btn-github center-block'), '/auth/github' %>
    </div>
    <div class='col-xs-6'>
      <h1>Log in</h1>
      <%= form_tag login_path, class: "form-horizontal", role: 'form' do %>
        <div class="form-group">
          <%= label_tag :email, nil, class: "col-sm-2 control-label" %>
          <%= text_field_tag :email, nil, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :password, nil, class: 'col-sm-2 control-label' %>
          <%= password_field_tag :password, nil, class: 'form-control' %>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= submit_tag 'Signin', class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
